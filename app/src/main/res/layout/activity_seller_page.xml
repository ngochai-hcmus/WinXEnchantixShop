<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.CustomerPageFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/infouser"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/pink"
        app:title="Information">
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/img_ava"
            android:layout_width="123dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ava" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="390dp"
            android:layout_marginTop="20dp"
            android:text="edit"
            android:textColor="@color/black"
            app:icon="@drawable/ic_edit"
            tools:ignore="TouchTargetSizeCheck" />
    </FrameLayout>

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="User name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_myShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:text="My shop"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/txt_myAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="My account"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/txt_Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Help"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/txt_About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="About"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/txt_LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Log out"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginLeft="25dp"
        android:background="@color/grey" />

</LinearLayout>