<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_brand"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/pink"
            android:padding="10dp"
            app:title="Brand"
            tools:ignore="MissingConstraints">
        </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_other_brand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="556dp">

        <TextView
            android:id="@+id/txt_other_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Other brand: "
            android:textColor="@color/black"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_brand">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_brand"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass"
            android:src = "@drawable/img_brand"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_brand_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass"
            android:src = "@drawable/img_brand_2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_brand">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_brand_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass"
            android:src = "@drawable/img_brand_3"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_brand_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass"
            android:src = "@drawable/img_brand_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_brand">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_brand_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass"
            android:src = "@drawable/img_brand_5"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_brand_6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass"
            android:src = "@drawable/img_brand_6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_brand">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_brand_7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass"
            android:src = "@drawable/img_brand_7"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_brand_8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            tools:ignore="MissingClass"
            android:src = "@drawable/img_brand_8" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_brand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_brand"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/txt_favourite_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Favourite brand: "
            android:textColor="@color/black"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>